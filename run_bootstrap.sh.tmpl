#!/bin/bash

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print status messages
print_status() {
    echo -e "${GREEN}==>${NC} $1"
}

print_error() {
    echo -e "${RED}Error:${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}Warning:${NC} $1"
}

# Check if running as root
if [ "$EUID" -eq 0 ]; then
    print_error "Please do not run this script as root"
    exit 1
fi

# Check if Nix is installed
if ! command -v nix >/dev/null 2>&1; then
    print_status "Installing Nix..."
    sh <(curl -L https://nixos.org/nix/install) --daemon
    # Source Nix environment
    . "$HOME/.nix-profile/etc/profile.d/nix.sh"
fi

# Check if chezmoi is installed
if ! command -v chezmoi >/dev/null 2>&1; then
    print_status "Installing chezmoi via Nix..."
    nix profile install nixpkgs#chezmoi
fi

# Initialize chezmoi with your dotfiles repository
if [ ! -d "$HOME/.local/share/chezmoi" ]; then
    print_status "Initializing chezmoi..."
    chezmoi init --apply https://github.com/{{ .chezmoi.username }}/dotfiles.git
else
    print_warning "chezmoi is already initialized"
fi

# Install required packages
print_status "Installing required packages..."
chezmoi apply -- --verbose

print_status "Bootstrap completed successfully!"
print_status "Your system is now configured with your dotfiles." 